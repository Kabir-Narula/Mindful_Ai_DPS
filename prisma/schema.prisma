// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  journalEntries JournalEntry[]
  moodEntries    MoodEntry[]
  goals          Goal[]
  chatSessions   ChatSession[]
  chatMessages   ChatMessage[]
  dayLogs        DayLog[]
  patterns       Pattern[]
  actionTrackings ActionTracking[]
  
  @@map("users")
}

model DayLog {
  id              String    @id @default(cuid())
  userId          String
  date            DateTime  @db.Date // Store as YYYY-MM-DD (midnight)
  
  // The "Setup"
  morningIntention String?  @db.Text
  
  // The "Insight" & "Action" (AI Generated)
  dailyInsight    String?   @db.Text
  suggestedAction String?   @db.Text
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  journalEntries  JournalEntry[]
  moodEntries     MoodEntry[]
  goals           Goal[]         // Goals created *on* this day or *for* this day
  actionTrackings ActionTracking[]
  
  @@unique([userId, date]) // One log per user per day
  @@map("day_logs")
  @@index([userId])
  @@index([date])
}

model JournalEntry {
  id          String   @id @default(cuid())
  userId      String
  title       String
  content     String   @db.Text
  moodRating  Int      // 1-10 scale
  activities  String[] // Array of activity tags
  sentiment   Float?   // Sentiment score from -1 to 1
  sentimentLabel String? // positive, neutral, negative
  feedback    String?  @db.Text // AI-generated feedback
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  dayLogId    String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayLog DayLog? @relation(fields: [dayLogId], references: [id])
  chatSessions ChatSession[]
  
  @@map("journal_entries")
  @@index([userId])
  @@index([createdAt])
  @@index([dayLogId])
}

model MoodEntry {
  id          String   @id @default(cuid())
  userId      String
  moodScore   Int      // 1-10 scale
  note        String?  @db.Text
  triggers    String[] // Things that affected mood
  createdAt   DateTime @default(now())
  
  dayLogId    String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayLog DayLog? @relation(fields: [dayLogId], references: [id])
  
  @@map("mood_entries")
  @@index([userId])
  @@index([createdAt])
  @@index([dayLogId])
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?  @db.Text
  targetDate  DateTime?
  completed   Boolean  @default(false)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  dayLogId    String?
  
  checkIns    GoalCheckIn[]
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayLog DayLog? @relation(fields: [dayLogId], references: [id])
  
  @@map("goals")
  @@index([userId])
  @@index([dayLogId])
}

model GoalCheckIn {
  id        String   @id @default(cuid())
  goalId    String
  note      String?  @db.Text
  completed Boolean
  createdAt DateTime @default(now())
  
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  
  @@map("goal_checkins")
  @@index([goalId])
}

model ChatSession {
  id          String   @id @default(cuid())
  userId      String
  title       String?  // Optional title for the conversation
  journalEntryId String? // If this chat is about a specific journal entry
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
  journalEntry JournalEntry? @relation(fields: [journalEntryId], references: [id], onDelete: SetNull)
  
  @@map("chat_sessions")
  @@index([userId])
  @@index([createdAt])
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String?  // Reference to chat session (nullable for migration)
  userId    String
  role      String   // user or assistant
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  session ChatSession? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("chat_messages")
  @@index([sessionId])
  @@index([userId])
  @@index([createdAt])
}

model Pattern {
  id          String   @id @default(cuid())
  userId      String
  type        String   // 'temporal', 'activity', 'theme', 'correlation'
  name        String   // AI-generated pattern name
  description String   @db.Text // AI-generated detailed explanation
  confidence  Float    // 0.0-1.0 confidence score
  evidence    Json     // Evidence data: dates, mood scores, activities, etc.
  insights    String   @db.Text // AI-generated insights about the pattern
  suggestions String?  @db.Text // AI-generated suggestions to address pattern
  
  isActive    Boolean  @default(true)
  dismissed   Boolean  @default(false)
  dismissedAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("patterns")
  @@index([userId])
  @@index([isActive])
  @@index([createdAt])
}

model ActionTracking {
  id              String   @id @default(cuid())
  userId          String
  dayLogId        String
  suggestedAction String   @db.Text
  
  accepted        Boolean  @default(false)
  acceptedAt      DateTime?
  
  completed       Boolean  @default(false)
  completedAt     DateTime?
  
  helpfulnessScore Int?    // 1-5 scale: how helpful was this action?
  userNote        String?  @db.Text // User's reflection on the action
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayLog DayLog @relation(fields: [dayLogId], references: [id], onDelete: Cascade)
  
  @@map("action_trackings")
  @@index([userId])
  @@index([dayLogId])
  @@index([accepted])
  @@index([completed])
}
